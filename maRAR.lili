      with ZipFile(file_name, 'r') as zip:
        zip.extractall()


def zip_file():
	new_file = filedialog.asksaveasfilename(
                initialfile='Untitled.zip',
                defaultextension=".zip",
                filetypes=[("ZIP Archives","*.zip"),
					   ("UwU Archives", "*.uwu"),
                       ("All Files", "*.*")])
	with ZipFile(new_file,'w') as zip:
			for file_name in file_names: 
				zip.write(file_name) 



